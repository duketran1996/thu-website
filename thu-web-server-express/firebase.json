{
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/home",
        "function": "app"
      },
      {
        "source": "/about",
        "function": "app"
      },
      {
        "source": "/exp",
        "function": "app"
      },
      {
        "source": "/contact",
        "function": "app"
      },
      {
        "source": "/send",
        "function": "app"
      },
      {
        "source": "/portrait",
        "function": "app"
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  }
}
